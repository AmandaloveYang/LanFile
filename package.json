{
  "name": "lanfile-pc",
  "version": "1.0.0",
  "description": "Cross-platform desktop application for local network file transfers",
  "main": "./dist/main/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production electron ./dist/main/main.js",
    "dev": "cross-env NODE_ENV=development TS_NODE_PROJECT=\"tsconfig.node.json\" concurrently \"npm run dev:renderer\" \"wait-on http://localhost:3001 && npm run dev:main\" \"npm run dev:preload\"",
    "dev:renderer": "cross-env TS_NODE_PROJECT=\"tsconfig.node.json\" webpack serve --config webpack.config.ts --mode development",
    "dev:main": "cross-env NODE_ENV=development TS_NODE_PROJECT=\"tsconfig.node.json\" webpack --config webpack.config.ts --mode development --watch",
    "dev:preload": "cross-env TS_NODE_PROJECT=\"tsconfig.node.json\" webpack --config webpack.config.ts --mode development --watch",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "webpack --config webpack.config.ts --mode production",
    "build:main": "webpack --config webpack.config.ts --mode production",
    "build:preload": "webpack --config webpack.config.ts --mode production",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.19",
    "@heroicons/react": "^2.1.1",
    "chokidar": "^4.0.3",
    "electron": "^28.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@svgr/webpack": "^8.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/html-webpack-plugin": "^3.2.9",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/webpack-dev-server": "^4.7.2",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.11.0",
    "electron-reloader": "^1.2.3",
    "electron-util": "^0.17.2",
    "eslint": "^8.0.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.0.0",
    "postcss": "^8.4.31",
    "postcss-import": "^16.0.0",
    "postcss-loader": "^8.1.1",
    "postcss-nesting": "^12.0.2",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.17",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "url-loader": "^4.1.1",
    "wait-on": "^7.2.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.3"
  }
}
